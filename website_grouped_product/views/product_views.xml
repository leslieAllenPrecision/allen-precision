<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="custom_product_normal_form_view" model="ir.ui.view">
    <field name="name">product.product.view.form.easy</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <field name="categ_id" position="after">
        <field name="parent_ids" widget="one2many_list">
          <tree editable="bottom">
            <field name="product_template_id"/>
          </tree>
        </field>
      </field>
    </field>
  </record>
  <record id="product_template_form_view_combo" model="ir.ui.view">
    <field name="name">product.template.combo.form.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="/form/sheet/div[@name='options']" position="inside">
        <field name="is_combo"/>
        <label for="is_combo"/>
      </xpath>
      <xpath expr="/form/sheet/notebook/page[@name='sales']" position="after">
        <page  name="combo_product" string="Group Items">
          <field name="combo_product_id">
            <tree editable="bottom">
              <field name="sequence" widget="handle"/>
              <field name="product_id" options="{'no_create': True}"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
  <record id="product_template_only_form_extended_combo_customize" model="ir.ui.view">
    <field name="name">product.template.only.form.extended.combo_customize</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='variants']" position="attributes">
        <attribute name="invisible">is_combo == True</attribute>
      </xpath>
    </field>
  </record>
  <record id="product_template_search_view_combo_product" model="ir.ui.view">
    <field name="name">product.template.search.combo.product</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='filter_to_sell']" position="before">
        <separator/>
        <filter domain="[('is_combo','=',True)]" name="group_products" string="Group Products"/>
      </xpath>
    </field>
  </record>
</odoo>