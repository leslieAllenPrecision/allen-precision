<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="sale_product_catalog_settings" position="after">
                <block title="Shop - Product Inquiry" id="website_product_inquiry">
                    <setting id="product_queries">
                        <field name="active_product_inquiry"/>
                        <div invisible="not active_product_inquiry">
                            <b><label class=" col-lg-3" string="Inquiry Header:" for="inquiry_header"/></b>
                            <field name="inquiry_header"/>
                            <b><label class=" col-lg-10" string="Inquiry Header Descripton:" for="inquiry_desc_info"/></b>
                            <field name="inquiry_desc_info"/>
                            <div class="content-group">
                                <div class="row mt16">
                                    <field name="inquiry_submit_action" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                            <div class="row mt16" invisible="inquiry_submit_action != 'email'">
                                <label class="o_light_label col-lg-3" string="Inquiry Recipient" for="inquiry_recipient_id"/>
                                <field name="inquiry_recipient_id" required="inquiry_submit_action == 'email' and active_product_inquiry"/>
                            </div>
                            <div class="row mt16" invisible="inquiry_submit_action != 'crm'">
                                <label class="o_light_label col-lg-3" string="Sales Team" for="sales_team_id"/>
                                <field name="sales_team_id" context="{'kanban_view_ref': 'sales_team.crm_team_view_kanban'}" required="inquiry_submit_action == 'crm' and active_product_inquiry"/>
                            </div>
                            <div class="row" invisible="inquiry_submit_action != 'crm'">
                                <label class="o_light_label col-lg-3" for="sales_person_id"/>
                                <field name="sales_person_id" required="inquiry_submit_action == 'crm'and active_product_inquiry"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>