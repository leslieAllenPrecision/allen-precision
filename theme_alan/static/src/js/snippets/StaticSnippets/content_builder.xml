<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="theme_alan.content_builder" owl="1">
        <div class="as_content_builder modal-body-in">
            <div class="as-edit-action-menu">
                <div class="as-edit-action-in">
                    <h5 class="m-0 text-white">Static Snippets</h5>
                    <div class="as-ea-edit-col as-ea-edit-right">
                        <button type="button" class="btn as-e-btn-danger"  t-on-click="close"> <i class="fa fa-chevron-left"></i> Cancel </button>
                        <button type="button" class="btn as-e-btn-success" t-on-click="save"> <i class="fa fa-floppy-o"></i> Save </button>
                    </div>
                </div>
            </div>
            <div class="as-edit-vertical-tab">
                <div class="e-ev-tab-content">
                    <t t-foreach="this.props.snippet_content" t-as="content" t-key="content">
                        <div t-attf-class="e-sb-tab--content">
                            <div class="row g-3 row-cols row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
                                 <t t-foreach="content.list" t-as="temp" t-key="temp.temp_id">
                                    <div class="col">
                                        <div t-attf-class="as-template as-edit-static-card {{this.state.selected_templ_id == temp.temp_id ? 'active' : ''}}" t-att-data-temp="temp.temp_id" t-on-click="selete_template">
                                            <div class="as-es-icon">
                                                <img t-att-data-temp="temp.temp_id" t-att-src="temp.img_url" t-on-click="selete_template"/>
                                            </div>
                                            <div class="as-es-text" t-att-data-temp="temp.temp_id" t-on-click="selete_template">
                                                <h6><t t-esc="temp.name"/></h6>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>
</odoo>
