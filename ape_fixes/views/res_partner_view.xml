<odoo>
    <record id="account.res_partner_action_customer" model="ir.actions.act_window">
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id='view_partner_tree_inherit_ape' model="ir.ui.view">
        <field name="name">res.partner.view.tree.inheirt</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="ref" string="Customer Number"/>
            </field>
        </field>
    </record>

    <record id='view_partner_form_inherit_ape' model="ir.ui.view">
        <field name="name">res.partner.view.form.inheirt</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name='street' position='attributes'>
                <attribute name='required'>True</attribute>
            </field>
<!--            <field name='street2' position='attributes'>-->
<!--                <attribute name='required'>True</attribute>-->
<!--            </field>-->
            <field name='phone' position='attributes'>
                <attribute name='required'>True</attribute>
            </field>
            <field name="user_ids" position="after">
                <field name="ref" string="Customer Number" force_save="1" readonly="1"/>
                <field name='contact_type' required="type == 'contact'" />
                <field name="customer_type"/>
            </field>
            <field name='category_id' position='replace'>
                <field name='contact_1'/>
                <field name='contact_2'/>
            </field>
        </field>
    </record>

    <record id='view_res_partner_filter_ape' model="ir.ui.view">
        <field name="name">res.partner.select.ape</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="name" filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', 'ilike', self), ('email', 'ilike', self)]"/>
            </field>
        </field>
    </record>



</odoo>
